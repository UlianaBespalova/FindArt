<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.FindArt" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/beige_normal</item>
        <item name="colorPrimaryVariant">@color/beige_additional</item>
        <item name="colorOnPrimary">@color/dark_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown</item>
        <item name="colorSecondaryVariant">@color/brown</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Custom theme. -->
        <item name="android:actionMenuTextColor">@color/dark_gray</item>
        <item name="android:toolbarStyle">@color/dark_gray</item>
        <item name="android:actionMenuTextAppearance">@style/Toolbar.MenuText</item>
    </style>

    <style name="Theme.FindArt_dark" parent="Theme.FindArt">
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="colorPrimary">@color/toolbar_gray</item>
    </style>

    <style name="Theme.FindArt_dark.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="colorControlNormal">@color/beige_normal</item>
    </style>

    <style name="ActionBar_transparent" parent="Theme.FindArt">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Toolbar.MenuText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/transparent_gray</item>
    </style>

    <style name="Theme.FindArt_animation" parent="Theme.FindArt">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">@transition/open_image</item>
        <item name="android:windowSharedElementExitTransition">@transition/open_image</item>
    </style>



    <style name="Theme.FindArt_splash" parent="Theme.FindArt_dark">
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>



    <style name="Theme.FindArt.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar"/>
    <style name="Theme.FindArt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>